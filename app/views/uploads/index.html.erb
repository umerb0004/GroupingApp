<div class='bg-white p-6 rounded-lg shadow-md w-9/12 absolute top-24 left-36 h-96 bg-gray-100 z-0'>
  <div class="absolute top-36 left-96">
    <%= form_tag(uploads_path, method: :post, multipart: true, class: 'mb-4') do %>
      <div class='flex items-center'>
       <%= file_field_tag :file_upload, accept: '.csv', class: 'py-2 px-3 border rounded-md shadow-sm mr-5 bg-white' %>
        <%= submit_tag 'Import Users', class: 'rounded-lg shadow-sm py-3 px-5 bg-blue-500 text-white flex font-medium cursor-pointer'%>
      </div>
    <% end %>
  </div>
</div>
